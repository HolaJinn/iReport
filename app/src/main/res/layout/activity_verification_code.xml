<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationCodeActivity"
    android:background="@color/softPink">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20sp">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="20sp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawableTint="@color/lightPurple"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="104dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type The Verification Code"
            android:textSize="20sp"
            android:textColor="@color/darkPurple"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="43dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:hint="****"
            android:textColorHint="@color/lightPurple"
            android:textAlignment="center"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="263dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Again"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            android:textColor="@color/lightPurple"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="410dp" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/white"
            android:width="200sp"
            android:background="@color/darkPurple"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="508dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>